<head>
  <link href="https://use.fontawesome.com/releases/v5.0.6/css/all.css" rel="stylesheet">
</head>

<h1>Todos</h1>
<table class="table table-hover" id="listTodos">
  <tbody>
  <% @todo.each do |todo| %>
  <tr onclick="location.href='<%= todo_path(todo) %>'">
    <td><%= todo.title %></td>
  </tr>
  <% end %>
  <tr class="addTodo">
    <td onclick="location.href=' <%= new_todo_path %> '"><i class="fas fa-plus-circle" id="addIcon"></i>New todo</td>
  </tr>
  </tbody>
</table>
