<h1>Todos</h1>
<table class="table table-hover" id="listTodos">
  <tbody>
  <% @todo.each do |todo| %>
  <tr onclick="location.href='<%= todo_path(todo) %>'">
    <td class="showTodo"><%= todo.title %></td>
    <td>dad</td>
  </tr>
  <% end %>
  <tr class="addTodo">
    <td colspan="2" onclick="location.href=' <%= new_todo_path %> '"><i class="fas fa-plus-circle" id="addIcon"></i>New todo</td>
  </tr>
  </tbody>
</table>
