<h1>Hello</h1>
<%= form_with scope: :todo, url: todos_path, local: true do |form| %>
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>

  <p>
    <%= form.label :text %><br>
    <%= form.text_area :text %>
  </p>

  <p>
    <%= form.submit class:"btn-danger" %>
  </p>
<% end %>