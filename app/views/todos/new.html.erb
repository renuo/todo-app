<h1>Add Todo</h1>
<i class="fas fa-arrow-left" onclick="location.href=' <%= todos_path %>'"></i>

<%= form_with scope: :todo, url: todos_path, local: true do |form| %>
  <div class="form-group">
    <%= form.label :title, for:"inputTitle" %><br>
    <%= form.text_field :title, type:"text", class:"form-control", id:"inputTitle" %>
  </div>

  <div class="form-group">
    <%= form.label :description, for:"inputDescription" %><br>
    <%= form.text_area :description, rows:"3", class:"form-control", id:"inputDescription" %>
  </div>

  <div class="form-group">
    <%= form.submit class:"btn btn-secondary", value:"Add" %>
  </div>
<% end %>